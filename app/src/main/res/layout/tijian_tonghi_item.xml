<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/fillet_white_bg">

        <TableRow>

            <TextView
                android:background="@drawable/table_frame_fray"
                android:id="@+id/xuhao"
                android:layout_height="@dimen/table_hight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />

            <TextView
                android:background="@drawable/table_frame_fray"

                android:layout_height="@dimen/table_hight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="河南省中医院"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"
                android:id="@+id/tijaindanwei" />

            <TextView
                android:background="@drawable/table_frame_fray"
                android:id="@+id/renshu"
                android:layout_height="@dimen/table_hight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />
        </TableRow>


        <TableRow>

            <TextView
                android:background="@drawable/table_frame_fray"
                android:text="本页总计："
                android:layout_height="@dimen/table_hight"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />

            <TextView
                android:background="@drawable/table_frame_fray"
                android:layout_weight="1"
                android:layout_height="@dimen/table_hight"
                android:id="@+id/zongji"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />
        </TableRow>


    </TableLayout>
    <View
        android:background="@color/global_bg_gray"
        android:layout_width="match_parent"

        android:layout_height="10dp"/>

</LinearLayout>