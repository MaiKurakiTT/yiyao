<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bg_gray"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--首页面的第一个小布局 start-->
            <RelativeLayout
                android:background="@drawable/fillet_white_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="培训人员管理"
                        android:textSize="@dimen/jg_top"
                        android:textColor="@color/global_black"
                        android:gravity="center_horizontal"
                        />
                    <TextView
                        android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="对企业要参加的员工进行管理"
                        android:textSize="14sp"
                        android:textColor="@color/global_gray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:paddingTop="14dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/sj_admin_eye"
                            />

                        <TextView
                            android:id="@+id/xuexizhongshu1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="170dp"
                            android:text="0"
                            android:textColor="@color/global_black"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/xuexizhong1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="155dp"
                            android:paddingTop="50dp"
                            android:text="学习中"
                            android:textColor="@color/global_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/yiwanchengshu1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="60dp"
                            android:text="0"
                            android:textColor="@color/global_black"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/yiwancheng1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="45dp"
                            android:paddingTop="50dp"
                            android:text="已完成"
                            android:textColor="@color/global_black"
                            android:textSize="14sp" />
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sj_admin_addadmin"
                            android:id="@+id/add_people"
                            android:textColor="@color/global_white"
                            android:textSize="14sp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/fillet_blue_bg"
                            android:clickable="true"
                            android:layout_marginTop="90dp"
                            android:layout_marginRight="70dp"
                            android:padding="8dp"
                            android:layout_marginBottom="10dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <!--首页面的第一个小布局 end-->

            <!--首页面的第2个小布局 start-->
            <RelativeLayout
                android:background="@drawable/fillet_white_bg"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sj_admin_project"
                        android:textSize="@dimen/jg_top"
                        android:textColor="@color/global_black"
                        android:gravity="center_horizontal"
                        />
                    <TextView
                        android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="选购培训项目并且把该培训项目指派给企业员工"
                        android:textSize="14sp"
                        android:textColor="@color/global_gray"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="14dp"
                        android:paddingTop="14dp"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/sj_admin_man"
                            />

                        <TextView
                            android:id="@+id/xuexizhongshu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="170dp"
                            android:text="0"
                            android:textColor="@color/global_black"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/xuexizhong2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:paddingRight="155dp"
                            android:paddingTop="50dp"
                            android:text="学习中"
                            android:textColor="@color/global_black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/yiwanchengshu2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:paddingRight="60dp"
                            android:text="0"
                            android:textColor="@color/global_black"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/yiwancheng2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:paddingRight="45dp"
                            android:paddingTop="50dp"
                            android:text="已完成"
                            android:textColor="@color/global_black"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sj_admin_selectproject"
                            android:textColor="@color/global_white"
                            android:textSize="14sp"

                            android:layout_alignParentRight="true"
                            android:background="@drawable/fillet_blue_bg"
                            android:clickable="true"
                            android:layout_marginTop="90dp"
                            android:layout_marginRight="70dp"
                            android:padding="8dp"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/select_project" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <!--首页面的第2个小布局 end-->


            <!--首页面的第3个小布局 start-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sj_admin_laba"
                    android:paddingLeft="13dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sj_admin_labamsg"
                    android:paddingTop="4dp"
                    android:paddingLeft="7dp"
                    android:textSize="18sp"
                    />
            </LinearLayout>
            <!--首页面的第3个小布局 end-->




        </LinearLayout>
        <com.lxkj.yiyao.view.RefreshListView
            android:layout_marginBottom="20dp"
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="400dp">


        </com.lxkj.yiyao.view.RefreshListView>



    </LinearLayout>
</ScrollView>