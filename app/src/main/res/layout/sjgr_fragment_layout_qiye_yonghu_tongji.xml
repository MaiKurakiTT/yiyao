<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">


    <!--查询条件和查询条件之下的输入框  start-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sj_shenhe_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="@string/sj_shenhe_selectmsg"
            android:textColor="@color/global_black"
            android:textSize="@dimen/table_textsize"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/yellow_but_bg"
            android:clickable="true"
            style="@style/button_text_view"
            android:text="@string/sj_shenhe_select"
            android:textColor="@color/global_white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_white_bg"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="时间条件："
                android:textColor="@color/global_black"
                android:textSize="@dimen/qyinfo_text_size" />

            <EditText
                android:layout_width="95dp"
                android:layout_height="@dimen/edit_height"
                android:textSize="@dimen/qyinfo_text_size"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:background="@drawable/edit_border_bg"
                android:lines="1"/>
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/black"/>
            <EditText
                android:layout_width="95dp"
                android:layout_height="@dimen/edit_height"
                android:textSize="@dimen/qyinfo_text_size"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_border_bg"
                android:lines="1" />
        </LinearLayout>

    </LinearLayout>
    <!--查询条件和查询条件之下的输入框  end-->


    <!--体验机构列表 start-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sj_shenhe_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="企业用户统计列表"
            android:textColor="@color/global_black"
            android:textSize="@dimen/table_textsize"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/fillet_white_bg">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="序号"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="地区"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="企业数量"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="1"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="郑州市"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="5"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="1"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="开封市"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="2"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="3"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="新乡市"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:text="2"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="@dimen/table_hight"
                android:background="@drawable/table_frame_fray"
                android:layout_weight="1"
                android:gravity="center"
                android:text="总计"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>

            <TextView
                android:background="@drawable/table_frame_fray"
                android:layout_height="@dimen/table_hight"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/global_black"
                android:textSize="@dimen/table_textsize"/>
        </TableRow>


    </TableLayout>


    <!--体验机构列表 end-->

</LinearLayout>