<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bg_gray"
        android:orientation="vertical">


        <!--查询条件和查询条件之下的输入框  start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <ImageView
                style="@style/image_title_view"
                android:layout_centerVertical="true"
                android:src="@mipmap/sj_shenhe_select" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_left"
                android:text="@string/sj_shenhe_selectmsg"
                android:textColor="@color/global_black"
                android:textSize="@dimen/qyinfo_text_size" />

            <TextView
                android:id="@+id/chaxun"
                style="@style/button_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"

                android:background="@drawable/yellow_but_bg"
                android:clickable="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/sj_shenhe_select"
                android:textColor="@color/global_white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fillet_white_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_register_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="搜索内容:"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <EditText
                    android:id="@+id/souguoneirong"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_height"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/table_frame_fray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/tv_register_time"
                    android:layout_marginLeft="10dp"
                    android:text="注册时间:"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_time"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/table_frame_fray" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="0.1dp"
                        android:layout_margin="10dp"
                        android:background="@color/global_black" />

                    <TextView
                        android:id="@+id/end_time"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_height"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/table_frame_fray" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <!--查询条件和查询条件之下的输入框  end-->


        <!--体验机构列表 start-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <ImageView
                style="@style/image_title_view"
                android:layout_centerVertical="true"
                android:src="@mipmap/sj_shenhe_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/title_left"
                android:text="@string/sj_shenhe_tiyan"
                android:textColor="@color/global_black"
                android:textSize="@dimen/qyinfo_text_size" />

            <TextView
                android:id="@+id/add"
                style="@style/button_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/yellow_but_bg"
                android:clickable="true"
                android:text="新增"
                android:textColor="@color/global_white" />
        </RelativeLayout>

