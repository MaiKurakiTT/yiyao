<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--首页面的第一个小布局 start-->
        <RelativeLayout
            android:background="@drawable/fillet_white_bg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sj_admin_actor"
                    android:textSize="@dimen/jg_top"
                    android:textColor="@color/global_black"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/sj_admin_msg"
                    android:textSize="14sp"
                    android:textColor="@color/global_gray"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/sj_admin_eye"
                        />
                    <TextView
                        android:id="@+id/jianguan_xuexizhong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/global_black"
                        android:textSize="22sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="170dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学习中"
                        android:textColor="@color/global_black"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="155dp"
                        android:paddingTop="50dp"
                        />
                    <TextView
                        android:id="@+id/jianguan_yiwancheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/global_black"
                        android:textSize="22sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="60dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已完成"
                        android:textColor="@color/global_black"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="45dp"
                        android:paddingTop="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sj_admin_addadmin"
                        android:id="@+id/add_people"
                        android:textColor="@color/global_white"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/fillet_blue_bg"
                        android:clickable="true"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="70dp"
                        android:padding="8dp"
                        android:layout_marginBottom="10dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--首页面的第一个小布局 end-->

        <!--首页面的第2个小布局 start-->
        <RelativeLayout
            android:background="@drawable/fillet_white_bg"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sj_admin_project"
                    android:textSize="@dimen/jg_top"
                    android:textColor="@color/global_black"
                    android:gravity="center_horizontal"
                    />
                <TextView
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/sj_admin_msg"
                    android:textSize="14sp"
                    android:textColor="@color/global_gray"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="14dp"
                    android:paddingTop="14dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/sj_admin_man"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/xuanze_xuexizhong"
                        android:textColor="@color/global_black"
                        android:textSize="22sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="170dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学习中"
                        android:textColor="@color/global_black"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="155dp"
                        android:paddingTop="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/xuanze_yiwancheng"
                        android:textColor="@color/global_black"
                        android:textSize="22sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="60dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已完成"
                        android:textColor="@color/global_black"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:paddingRight="45dp"
                        android:paddingTop="50dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sj_admin_selectproject"
                        android:textColor="@color/global_white"
                        android:textSize="14sp"

                        android:layout_alignParentRight="true"
                        android:background="@drawable/fillet_blue_bg"
                        android:clickable="true"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="70dp"
                        android:padding="8dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/select_project" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <!--首页面的第2个小布局 end-->


        <!--首页面的第3个小布局 start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sj_admin_laba"
                android:paddingLeft="13dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sj_admin_labamsg"
                android:paddingTop="4dp"
                android:paddingLeft="7dp"
                android:textSize="18sp"
                />
        </LinearLayout>
        <!--首页面的第3个小布局 end-->

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"></ListView>

    </LinearLayout>



</android.support.v4.widget.NestedScrollView>