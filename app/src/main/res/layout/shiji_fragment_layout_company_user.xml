<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg_gray">


    <LinearLayout
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"

            >
            <ImageView
                android:id="@+id/cx"
                android:layout_centerVertical="true"
                style="@style/image_title_view"
                android:src="@mipmap/sj_shenhe_select"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/yellow_but_bg"
                android:clickable="true"
                
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
               style="@style/table1hight"
                android:text="@string/sj_shenhe_select"
                android:textColor="@color/global_white"
                android:id="@+id/select" />

            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查询条件"
                android:textColor="#333"
                android:textSize="@dimen/title_textsize"
                android:layout_alignBaseline="@+id/select"
                android:layout_alignBottom="@+id/select"
                android:layout_toEndOf="@+id/cx"
                android:id="@+id/textView56" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fillet_white_bg"
            >
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户姓名："
                android:textColor="#333"
                android:textSize="18sp"
                />
            <EditText
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:id="@+id/imput_name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tj"
                android:layout_centerVertical="true"
                style="@style/image_title_view"
                android:src="@mipmap/sj_shenhe_menu"
                />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="企业员工列表"
                android:textSize="@dimen/title_textsize"
                android:textColor="#333"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/excel_export"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="5dp"
                
                android:textColor="@color/global_white"
                android:paddingLeft="10dp"
               style="@style/table1hight"
                android:paddingRight="10dp"
                android:background="@drawable/yellow_but_bg"
                />

        </RelativeLayout>


    </LinearLayout>

    <com.lxkj.yiyao.view.RefreshListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view"
        ></com.lxkj.yiyao.view.RefreshListView>

</LinearLayout>