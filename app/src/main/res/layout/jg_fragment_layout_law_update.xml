<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/global_bg_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/global_bg_gray"

        android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--查询条件和查询条件之下的输入框  start-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        style="@style/image_title_view"
                        android:src="@mipmap/sj_shenhe_select" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_left"
                        android:text="@string/sj_shenhe_selectmsg"
                        android:textColor="@color/global_black"
                        android:textSize="@dimen/qyinfo_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/yellow_but_bg"
                        android:clickable="true"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        style="@style/table1hight"
                        android:text="@string/sj_shenhe_select"
                        android:textColor="@color/global_white"
                        android:id="@+id/select" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/fillet_white_bg"

                    android:orientation="vertical"
                    style="@style/table1hight">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_height="wrap_content"
                            android:text="@string/sj_law_number"
                            android:textColor="@color/global_black"
                            android:textSize="@dimen/qyinfo_text_size" />

                        <EditText
                            android:textSize="@dimen/qyinfo_text_size"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/table_frame_fray"
                            android:lines="1"
                            android:id="@+id/number"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/textView" />
                    </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:text="@string/sj_law_type"
                        android:gravity="center"
                        android:textColor="@color/global_black"
                        android:textSize="@dimen/qyinfo_text_size" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="9dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:textSize="@dimen/qyinfo_text_size"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_height"
                            android:background="@drawable/table_frame_fray"
                            android:id="@+id/type">
                        </EditText>

                    </LinearLayout>


                </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/sj_law_time"
                            android:textColor="@color/global_black"
                            android:textSize="@dimen/qyinfo_text_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            >
                            <TextView
                                android:clickable="true"
                                android:textSize="@dimen/qyinfo_text_size"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/table_frame_fray"
                                android:layout_height="@dimen/edit_height"
                                android:id="@+id/start_time" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                />

                            <TextView
                                android:textSize="@dimen/qyinfo_text_size"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/table_frame_fray"
                                android:layout_height="@dimen/edit_height"
                                android:id="@+id/end_time" />
                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>




                <!--查询条件和查询条件之下的输入框  end-->


                <!--体验机构列表 start-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp">

                    <ImageView
                        style="@style/image_title_view"
                        android:src="@mipmap/sj_shenhe_menu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/title_left"
                        android:text="@string/sj_lay_list"
                        android:textColor="@color/global_black"
                        android:textSize="@dimen/qyinfo_text_size" />
                </RelativeLayout>





            </LinearLayout>


        <com.lxkj.yiyao.view.RefreshListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            >

        </com.lxkj.yiyao.view.RefreshListView>




    </LinearLayout>
</LinearLayout>