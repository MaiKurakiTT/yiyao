<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/global_bg_gray">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
    android:text="订单编号" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/fillet_white_bg">

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="序号"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/number"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="培训班名称"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/dingdanbianhao"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="xxx"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="培训班类型"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/peixunbanmingci"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:maxLength="12"
                    android:text="xxx"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="培训时间"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/peixunbanleixing"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:maxLength="12"
                    android:text="xxx"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="证书名称"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/peixunshijian"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="12"
                    android:text="xxxx"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="购买时间"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/shibaorenshu"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="12"
                    android:text="xxx"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="学习进度"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/goukerenshu"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="12"
                    android:text="xxxx"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:gravity="center"
                    android:text="操作"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/qyinfo_text_size" />

                <TextView
                    android:id="@+id/caozuo"
                    android:layout_height="@dimen/table_hight"
                    android:layout_weight="1"
                    android:background="@drawable/table_border_bg"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLength="12"
                    android:text="查看"
                    android:textColor="@color/global_bg_blue"
                    android:textSize="@dimen/qyinfo_text_size" />
            </TableRow>

        </TableLayout>
    </LinearLayout>


</LinearLayout>