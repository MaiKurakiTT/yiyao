<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_gray"
    android:orientation="vertical">


    <!--查询条件和查询条件之下的输入框  start-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sj_shenhe_select" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="@string/sj_shenhe_selectmsg"
            android:textColor="@color/global_black"
            android:textSize="@dimen/table_textsize"  />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:background="@drawable/yellow_but_bg"
            android:clickable="true"
            style="@style/button_text_view"
            android:text="查询"
            android:textColor="@color/global_white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/blue_but_bg"
            android:clickable="true"
            style="@style/button_text_view"
            android:text="返回"
            android:textColor="@color/global_white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fillet_white_bg"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="搜索内容："
                android:textColor="@color/global_black"
                android:textSize="@dimen/qyinfo_text_size" />

            <EditText
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:background="@drawable/edit_border_bg"
                android:hint="身份证号、体检报告号、医院"
                android:lines="1"
                android:textSize="@dimen/qyinfo_text_size"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="体检时间："
                android:textColor="@color/global_black"
                android:textSize="@dimen/qyinfo_text_size" />

            <EditText
                android:layout_width="90dp"
                android:layout_height="@dimen/edit_height"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingBottom="8dp"
                android:background="@drawable/edit_border_bg"
                android:lines="1"
                android:paddingTop="10dp" />
            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@color/black"/>
            <EditText
                android:layout_width="90dp"
                android:layout_height="@dimen/edit_height"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="8dp"
                android:background="@drawable/edit_border_bg"
                android:lines="1"
                android:paddingTop="10dp" />
        </LinearLayout>

    </LinearLayout>
    <!--查询条件和查询条件之下的输入框  end-->


    <!--体验机构列表 start-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sj_shenhe_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="体检报告列表"
            android:textColor="@color/global_black"
            android:textSize="@dimen/table_textsize"  />
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fillet_white_bg">

            <TableRow>

                <TextView
                    android:background="@drawable/table_frame_fray"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    style="@style/table1hight"
                    android:text="序号"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize" />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    style="@style/table1hight"
                    android:text="体检报告编号"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"
                    
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    style="@style/table1hight"
                    android:text="姓名"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/table_frame_fray"
                    
                    android:paddingLeft="35dp"
                    android:paddingRight="30dp"
                    style="@style/table1hight"
                    android:text="1"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"
                    android:paddingLeft="30dp"
                    android:gravity="center"
                    android:paddingRight="30dp"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"
                    android:id="@+id/textView29" />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:gravity="center"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"
                    android:id="@+id/textView30" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@drawable/table_frame_fray"
                    
                    android:paddingLeft="35dp"
                    android:paddingRight="30dp"
                    style="@style/table1hight"

                    android:text="2"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:gravity="center"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:gravity="center"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />
            </TableRow>
            <TableRow>

                <TextView
                    android:background="@drawable/table_frame_fray"
                    
                    android:paddingLeft="35dp"
                    android:paddingRight="30dp"
                    style="@style/table1hight"

                    android:text="3"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:gravity="center"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:gravity="center"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />
            </TableRow>
            <TableRow>

                <TextView
                    android:background="@drawable/table_frame_fray"
                    
                    android:paddingLeft="35dp"
                    android:paddingRight="30dp"
                    style="@style/table1hight"

                    android:text="4"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:gravity="center"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />

                <TextView
                    android:background="@drawable/table_frame_fray"

                    android:gravity="center"
                    style="@style/table1hight"
                    android:text="XXXX"
                    android:textColor="@color/global_black"
                    android:textSize="@dimen/table_textsize"  />
            </TableRow>


        </TableLayout>

    </HorizontalScrollView>


    <!--体验机构列表 end-->

</LinearLayout>